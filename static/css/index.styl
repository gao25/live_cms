/* live cms */
body
  font-family SimSun, NSimSun

/* 顶部 */
.lvs-head
  position absolute
  top 0
  left 0
  right 0
  min-width 1245px
  height 100px
  background-color #2b3245
  color #f3f3f3
  overflow hidden
  .logo
    float left
    width 269px
    height 100%
    border-right 1px solid #1a233b
  .nav
    float left
    margin-left 70px
    padding-top 30px
    line-height 40px
    font-size 0
    color #fff
    a
      display inline-block
      position relative
      padding 0 30px
      font-size 16px
      color #fff
      .arrow
        display none
      &.current
        color #12bb9a
        .arrow
          position absolute
          display block
          top 55px
          left 50%
          margin-left -15px
          border-bottom 15px solid #fff
          border-left 15px solid transparent
          border-right 15px solid transparent
    em
      display inline-block
      font-size 16px
  .user
    float right
    margin-right 60px
    padding-top 30px
    line-height 40px
    font-size 12px
    .headpic
      position absolute
      margin-left -60px
      width 40px
      height 40px
      border-radius 50%
      overflow hidden
      img
        display block
        width 100%
    .uname
      margin-right 20px
      font-size 14px
    a
      color #fff

.lvs-nav
  position absolute
  left 0
  top 100px
  bottom 0
  width 270px
  background-color #323a4d
  color #f3f3f3
  .user
    width 265px
    height 190px
    margin-left 5px
    border-bottom 1px solid #1b2436
    img
      width 65px
      margin-left 102px
      margin-top 50px
    .uname
      font-family 'Arial'
      font-size 12px
      display block
      text-align center
      margin-top 10px
      &:before
        content ''
        display inline-block
        width 10px
        height 10px
        margin-right 5px
        border-radius 50%
        background #0fc19a
  ul
    background-color #323a4d
  li
    width 265px
    height 70px
    line-height 70px
    margin-left 5px
    text-align center
    font-size 16px
    border-bottom 1px solid #1b2436

.lvs-iframe
  position absolute
  left 270px
  top 100px
  right 0
  bottom 0
  iframe
    display block
    width 100%
    height 100%
  

