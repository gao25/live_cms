/* live cms */
body
  font-family SimSun, NSimSun

/* 顶部 */
.lvs-head
  position absolute
  top 0
  left 0
  right 0
  min-width 1245px
  height 100px
  background-color #2b3245
  color #f3f3f3
  overflow hidden
  .logo
    float left
    width 269px
    height 100%
    border-right 1px solid #1a233b
  .nav
    float left
    margin-left 70px
    padding-top 30px
    line-height 40px
    font-size 0
    color #fff
    a
      display inline-block
      position relative
      padding 0 30px
      font-size 16px
      color #fff
      .arrow
        display none
      &.current
        color #12bb9a
        .arrow
          position absolute
          display block
          top 55px
          left 50%
          margin-left -15px
          border solid 15px #fff
          border-color transparent transparent #fff
          border-top none
    em
      display inline-block
      font-size 16px
  .user
    float right
    margin-right 60px
    padding-top 30px
    line-height 40px
    font-size 12px
    .headpic
      position absolute
      margin-left -60px
      width 40px
      height 40px
      border-radius 50%
      overflow hidden
      img
        display block
        width 100%
    .uname
      margin-right 20px
      font-size 14px
    a
      color #fff

.lvs-nav
  position absolute
  left 0
  top 100px
  bottom 0
  width 270px
  background-color #323a4d
  color #f3f3f3
  overflow auto
  .user
    height 140px
    padding-top 50px
    .headpic
      margin auto
      width 60px
      height 60px
      border-radius 50%
      overflow hidden
      img
        display block
        width 100%
    .uname
      font-family Arial
      font-size 12px
      display block
      text-align center
      margin-top 10px
      &:before
        content ''
        display inline-block
        width 10px
        height 10px
        margin-right 5px
        border-radius 50%
        background #0fc19a
  ul
    border-bottom 1px solid #1b2436
  li
    position relative
    height 70px
    border-top 1px solid #1b2436
    a
      display block
      line-height 70px
      text-align center
      font-size 16px
      color #f3f3f3
      em.line
        position absolute
        left 0
        top -1px
        width 8px
        height 71px
        background-color #323a4d
        overflow hidden
      em.arrow
        display none
      &.current
        color #fff
        background-color #2b3245
        em.line
          border-left solid 2px #12bb9a
          background-color #2b3245
          width 6px
        em.arrow
          position absolute
          display inline-block
          left 2px
          top 29px
          border solid 6px #12bb9a
          border-color transparent transparent transparent #12bb9a


.lvs-iframe
  position absolute
  left 270px
  top 100px
  right 0
  bottom 0
  iframe
    display block
    width 100%
    height 100%
  

