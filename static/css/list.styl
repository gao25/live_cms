/* 搜索栏 */
.lvs-listhead
  height 60px
  border-bottom 1px solid #ccc
  .search
    float right
    margin 14px 20px
    input, select
      width 110px
      height 30px
      border none
      outline none
      border-radius 0
      text-indent 6px
      font-size 14px
      color #808080
    select
      margin-right 6px
      width auto
      -webkit-appearance none
      text-indent 0
      padding 0 20px 0 6px
      background url(../img/select.png) no-repeat right 12px
      cursor pointer
    .inputbar, .btnbar
      float left
      margin-left -1px
      border 1px solid #999
      .barname
        display none
      .date
        margin-right 6px
        background url(../img/date.png) no-repeat right center
      .text
        width 200px
      .submit
        width 31px
        background url(../img/search1.png) #f0f0f0 no-repeat center center
        text-indent -99px
        cursor pointer

/* 分页 */
.lvs-page
  margin 50px 20px 25px
  text-align right
  font-size 0
  a, span
    display inline-block
    margin-left -1px
    padding 8px 15px
    border 1px solid #808080
    color #808080
    font-size 14px
    &.current
      background-color #13bb9a
      color #fff



.lvs-list
  .detail
    float left
    width 310px
    height 330px
    border 1px solid #d3d3d3
    margin 40px 0 0 40px
    overflow hidden
    .lvs-img
      position relative
      width 310px;
      height 200px
      .img
        width 310px
        height 200px
      .play
        position absolute
        top 50%
        left 50%
        width 44px
        margin-left -22px
        margin-top -22px
      .lvs-title
        font-size 14px
        position absolute
        color #f5f5f5
        left 14px
        bottom 5px
      .lvs-id
        position absolute
        top 10px
        right 8px
        width 56px
        height 18px
        background-color #a37c8c
        color #fefefe
        text-align center
        border-radius 18px
    .lvs-message
      padding 10px 15px
      font-size 11px
      color #4c4c4c
      line-height 16px
      border-bottom 1px solid #d3d3d3
      overflow hidden
      .lvs-comment
        float left
      .lvs-praise
        float right
    .detail-footer
      margin 8px 10px
      float right
      li
        cursor pointer
        display inline-block
      .more
        position relative
        ul
          position absolute
          top -46px
          right -5px
          width 25px
          padding-bottom 10px
          background-color #fff
          display none
          li
            margin-bottom 2px
            a
              color #808080
