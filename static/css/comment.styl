body
  font-family SimSun, NSimSun
.lvs-comment
  width 98%
  height 50px
  margin-left 2%
  .comment-pending-btn,.comment-delete-btn,.a-add-btn,.user-open-btn,.user-close-btn
    float left
    width 68px
    height 32px
    font-size 12px
    color #fff
    background-color #12bb9a
    line-height 32px
    text-align center
    border-radius 5px
    margin 14px 0 12px 5px
    cursor pointer
    img
      vertical-align middle
      margin-right 5px
.lvs-listhead
  border 0
.comment-list
  width 96%
  margin-left 2%
  margin-bottom 5%
  font-size 12px
  table
    width 100%
    border-right 1px solid #2b3245
    border-bottom 1px solid #2b3245
    tr
      color #323a4d
      &.listhead
        height 55px
        color #2b3245
      td
        padding 10px
        border-left 1px solid #2b3245
        border-top 1px solid #2b3245 
        &.lselect,&.lid
          width 9%
        &.ldelete,&.user,&.idnum,&.lstate,&.ltime
          width 12%
        &.lcomment
          width 22%
        .pending-btn,.preview-btn,.delete-btn,.edit-btn
          text-decoration underline
          cursor pointer
        &.ctitle
          width 12%
        &.clink
          width 15%
        &.vselect,&.vcreater,&.vstate,&.vidnum,&.vhours,&.vsize,&.vformat
          width 8%
        &.vtitle,&.vhandle
          width 12%
        &.vtime
          width 13%
        &.uselect,&.usex,&.ustate,&.unick
          width 6%
        &.uhandle,&.uphoto,&.uname,&.uchannel,&.uphone
          width 9%
        &.uemail,&.utime
          width 12%
        &.aselect,&.aid,&.astate
          width 8%
        &.ahandle,&.arole,&.aorgan,&.aname,&.aphone
          width 10%
        &.aaccount,&.atime
          width 13%
        &.lsort-btn ul li
          display inline-block
          color #2c1cca
          text-decoration underline
          cursor pointer
        &.uhandle-btn,&.ahandle-btn
          a
            color #2c1cca
            text-decoration underline
            cursor pointer
        &.lhandle-btn li
          display inline-block
          a
            color #2c1cca
            text-decoration underline
            cursor pointer
          &.more
            position relative
            padding-top 5px
            ul
              position absolute
              top -40px
              right 0
              width 25px
              padding-bottom 6px
              background-color #fff
              display none
              li
                margin-top 5px
                a
                  text-decoration none
                  color #808080
        img
          width 40%
        .lselect-btn,.select-btn
          display inline-block
          width 12px
          height 12px
          border 1px solid #2b3245
          cursor pointer
          &.lselected
            background-color #11DAEE

