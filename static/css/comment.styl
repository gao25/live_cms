body
  font-family SimSun, NSimSun
.lvs-comment
  width 100%
  height 50px
  .comment-delete-btn
    float left
    width 68px
    height 32px
    font-size 12px
    color #fff
    background-color #12bb9a
    line-height 32px
    text-align center
    border-radius 5px
    margin 14px 20px 12px
    cursor pointer
    img
      vertical-align middle
      margin-right 5px
.lvs-listhead
  border 0
.comment-list
  width 96%
  margin-left 2%
  margin-bottom 5%
  font-size 12px
  table
    width 100%
    border-right 1px solid #2b3245
    border-bottom 1px solid #2b3245
    tr
      color #323a4d
      &.listhead
        height 55px
        color #2b3245
      td
        padding 10px
        border-left 1px solid #2b3245
        border-top 1px solid #2b3245 
        &.lselect,&.lid
          width 9%
        &.ldelete,&.user,&.idnum,&.lstate,&.ltime
          width 12%
        &.lcomment
          width 22%
        &.delete-btn
          text-decoration underline
          cursor pointer
        &.cid,&.cstate,&.ccreater,&.cstyle,&.cnum
          width 8%
        &.ctime,&.ctitle
          width 13%
        &.clink,&.chandle
          width 17%
        &.ssort,&.shandle,&.stitle,&.stime
          width 12%
        &.sid,&.screater,&.snum
          width 6%
        &.sstate,&.sstyle
          width 7%
        &.slink
          width 16%
        &.vselect,&.vcreater,&.vstate,&.vidnum,&.vhours,&.vsize,&.vformat
          width 8%
        &.vtitle,&.vhandle
          width 12%
        &.vtime
          width 13%
        &.lsort-btn ul
          float right
          li
            display inline-block
            color #2c1cca
            text-decoration underline
            cursor pointer
        &.lhandle-btn li
          display inline-block
          a
            color #2c1cca
            text-decoration underline
            cursor pointer
          &.more
            position relative
            padding-top 5px
            ul
              position absolute
              top -40px
              right 0
              width 25px
              padding-bottom 6px
              background-color #fff
              display none
              li
                margin-top 5px
                a
                  text-decoration none
                  color #808080
        .lselect-btn,.select-btn
          display inline-block
          width 12px
          height 12px
          border 1px solid #2b3245
          cursor pointer
          &.lselected
            background-color #11DAEE