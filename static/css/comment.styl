body
  font-family SimSun, NSimSun
.lvs-comment
  width 100%
  height 50px
  .comment-delete-btn
    float left
    width 68px
    height 32px
    font-size 12px
    color #fff
    background-color #12bb9a
    line-height 32px
    text-align center
    border-radius 5px
    margin 5px 20px 12px
    cursor pointer
    img
      vertical-align middle
      margin-right 5px
.comment-list
  width 96%
  margin-left 2%
  margin-bottom 5%
  font-size 12px
  table
    width 100%
    border-right 1px solid #2b3245
    border-bottom 1px solid #2b3245
    tr
      color #323a4d
      &.listhead
        height 55px
        color #2b3245
      td
        padding 15px
        border-left 1px solid #2b3245
        border-top 1px solid #2b3245 
        &.lselect,&.lid
          width 9%
        &.ldelete,&.user,&.idnum,&.lstate,&.ltime
          width 12%
        &.lcomment
          width 22%
        &.delete-btn
          text-decoration underline
          cursor pointer
        span
          display inline-block
          width 12px
          height 12px
          border 1px solid #2b3245
          cursor pointer
          &.lselected
            background-color #11DAEE