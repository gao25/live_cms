body
  font-family SimSun, NSimSun
  
/* 页面面包屑 */
.lvs-crumb
  height 24px
  border-bottom 1px solid #ccc
  padding 18px 20px
  font-size 0
  a, span
    display inline-block
    margin-right 8px
    color #808080
    font-size 14px
    &.back
      margin-right 16px
      height 24px
      line-height @height
      padding-left 20px
      background url(../img/back_img.png) no-repeat left center
.lvs-preview
  width 100%
  height 775px
  .ltitel
    margin-top 20px
    margin-left 2%
    width 98%
    height 45px
    color #fff
    font-size 16px
    background-color #323a4d
    line-height 45px
    img
      padding-left 10px
      vertical-align middle
  .phone-preview
    float left
    position relative
    width 292px
    height 606px
    margin 40px 0 0 96px
    background url(/static/img/phone.png) no-repeat
    .lvs-detail
      position absolute
      top 85px
      left 16px
  .message-preview
    float left
    width 300px
    margin 115px 10px 115px 70px
    ul
      font-size 16px
      color #2b3245
      li
        margin-bottom 30px