body
  font-family SimSun, NSimSun
  .lvs-creat
    width 100%
    height 50px
    .creat-btn
      float left
      width 90px
      height 32px
      font-size 12px
      color #fff
      background-color #12bb9a
      line-height 32px
      text-align center
      border-radius 5px
      margin 5px 20px 12px
      cursor pointer
      img
        vertical-align middle
        margin-right 5px
  .scene-list
    width 96%
    margin-left 2%
    margin-bottom 5%
    font-size 12px
    table
      width 100%
      border-right 1px solid #2b3245
      border-bottom 1px solid #2b3245
      tr
        color #323a4d
        height 55px
        &.listhead
          color #2b3245
        td
          border-left 1px solid #2b3245
          border-top 1px solid #2b3245 
          &.lid,&.lstate,&.lcreater,&.lstyle,&.lnum
            width 8%
          &.lhandle,&.ltitle
            width 13%
          &.llink,&.ltime
            width 17%
          &.lhandle-btn li
            display inline-block
            a
              color #2c1cca
              text-decoration underline
              cursor pointer
            &.more
              position relative
              padding-top 5px
              ul
                position absolute
                top -40px
                right 0
                width 25px
                padding-bottom 6px
                background-color #fff
                display none
                li
                  margin-top 5px
                  a
                    text-decoration none
                    color #808080