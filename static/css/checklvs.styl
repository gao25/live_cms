body
  font-family SimSun, NSimSun
  .lvs-creat
    width 100%
    height 50px
    .creat-btn
      float left
      width 90px
      height 32px
      font-size 12px
      color #fff
      background-color #12bb9a
      line-height 32px
      text-align center
      border-radius 5px
      margin 5px 20px 12px
      cursor pointer
      img
        vertical-align middle
        margin-right 5px
    .lvs-search
      float right
      position relative
      margin 5px 20px 12px
      width 710px
      height 32px
      border 1px solid #999
      .start-day,.end-day,.lvs-style,.lvs-keyword,.lvs-reporter
        outline none
        border none
        border-right 1px solid #999
        width 100px
        height 29px
        font-size 14px
        line-height 31px
        color #808080
      .start-day,.end-day
        background url(/static/img/date.png) no-repeat 90% 50%
      .start-day
        padding-left 5px
      .lvs-keyword
        width 245px
      img
        position absolute
        top 6px
        right 8px
  .comment-list
    width 96%
    margin-left 2%
    margin-bottom 5%
    font-size 12px
    table
      width 100%
      border-right 1px solid #2b3245
      border-bottom 1px solid #2b3245
      tr
        color #323a4d
        height 55px
        &.listhead
          color #2b3245
        td
          border-left 1px solid #2b3245
          border-top 1px solid #2b3245 
          &.lid,&.lstate,&.lcreater,&.lstyle,&.lnum
            width 8%
          &.lhandle,&.ltitle
            width 13%
          &.llink,&.ltime
            width 17%
          &.lhandle-btn a
            color #2c1cca
            margin 0 2px
            text-decoration underline
            cursor pointer