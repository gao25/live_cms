.lvslist-head
  width 100%
  height 60px
  border-bottom 1px solid #ccc
  .lvs-search
    float right
    position relative
    margin 12px 20px
    width 700px
    height 33px
    border 1px solid #999
    .start-day,.end-day,.lvs-style,.lvs-keyword,.lvs-reporter
      outline none
      border none
      border-right 1px solid #999
      width 100px
      height 31px
      font-size 14px
      line-height 32px
      color #808080
    .start-day,.end-day
      background url(/static/img/date.png) no-repeat 90% 50%
    .start-day
      padding-left 5px
    .lvs-keyword
      width 245px
    img
      position absolute
      top 6px
      right 8px
.lvs-list
  .lvs-detail
    width 310px
    height 330px
    display inline-block
    border 1px solid #d3d3d3
    margin-top 40px
    margin-left 45px
    overflow hidden
    .lvs-img
      position relative
      width 310px;
      height 200px
      .img
        width 310px
        height 200px
      .play
        position absolute
        top 50%
        left 50%
        width 44px
        margin-left -22px
        margin-top -22px
      .lvs-title
        font-size 14px
        position absolute
        color #f5f5f5
        left 14px
        bottom 5px
      .lvs-id
        position absolute
        top 10px
        right 8px
        width 56px
        height 18px
        background-color #a37c8c
        color #fefefe
        text-align center
        border-radius 18px
    .lvs-message
      padding 10px 15px
      font-size 11px
      color #4c4c4c
      line-height 16px
      border-bottom 1px solid #d3d3d3
      overflow hidden
      .lvs-comment
        float left
      .lvs-praise
        float right
    .detail-footer
      margin 8px 10px
      float right
      position relative
      .more
        cursor pointer
      .more-menu
        position absolute
        top -55px
        right -8px
        width 34px
        height 55px
        margin-bottom 16px
        font-size 12px
        color #808080
        background-color #fff
        text-align center
        cursor pointer
        &.hide-menu
          display none
        a
          display inline-block
          padding 3px
.lvs-pages
  float right
  color #808080
  font-size 14px
  margin 50px 20px 25px
  table
    border-right 1px solid #808080
    border-bottom 1px solid #808080
    td
      padding 8px 15px
      border-left 1px solid #808080
      border-top 1px solid #808080