body
  font-family SimSun, NSimSun
  .edit-head
    height 24px
    border-bottom 1px solid #ccc
    font-size 14px
    padding 18px 20px
    color #808080
    img
      vertical-align middle
    a
      color #808080
      padding 0 3px
      line-height 24px
  .lvs-edit
    width 100%
    height 640px
    color #2b3245
    .edit-message
      float left
      width 450px
      margin 50px 25px
      .inputbar
        width 450px
        height 22px
        padding-bottom 55px
        .lvs-address
          font-family Adobe,SimHei
          font-size 16px
          line-height 22px
        .lvs-reporter
          font-size 14px
          line-height 22px
        input
          width 280px
          height 22px
          font-size 12px
          line-height 22px
          border-color #2b3245
          border-width 1px
          padding-left 10px
        .lvs-time,.lvs-style
          font-size 12px
        select
          width 176px
          height 22px
          line-height 22px
          border-color #2b3245
          padding-left 10px
          option
            padding-bottom 10px
      .edit-state
        width 450px
        height 22px
        margin-top 120px
        .lvs-state
          font-size 12px
        .lstate
          display inline-block
          width 85px
          height 22px
          color #b3b3b3
          line-height 22px
          text-align center
          border 1px solid #d6d6d6
          border-radius 22px
          margin-right 25px
          margin-bottom 15px
          cursor pointer
          &:last-child
            margin-left 60px
          &.checked
            color #12bb9a
            border-color #12bb9a
    .edit-content
      float left
      width 450px
      margin 45px 90px
      .lvs-content
        font-size 14px
        span
          color #b3b3b3
      .lcontent
        width 450px
        height 455px
        border 1px solid #d6d6d6
        margin-top 15px
  .edit-btn
    clear both
    width 370px
    height 36px
    margin 80px auto;
    input
      display inline-block
      width 100px
      height 36px
      text-align center
      color #fff
      background-color #c2c2c2
      border-width 0
      border-color #fff
      border-radius 5px
      margin 0 40px
      &.submit
        background-color #12bb9a

